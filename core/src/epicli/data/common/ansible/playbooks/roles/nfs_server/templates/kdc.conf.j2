# {{ ansible_managed }}

{# TODO: review and refactor content - nice to have the same settings for both distros #}
{% if ansible_os_family == 'RedHat' %}
{# Content based on krb5-server-1.15.1 package #}
[kdcdefaults]
    kdc_listen = 88
    kdc_tcp_listen = 88

[realms]
    {{ kerberos_realm }} = {
        acl_file = /var/kerberos/krb5kdc/kadm5.acl
        dict_file = /usr/share/dict/words
        supported_enctypes = aes256-cts:normal aes128-cts:normal
    }
{% else %}
{# Ubuntu, content based on krb5-kdc package (v1.16) #}
[kdcdefaults]
    kdc_listen = 88
    kdc_tcp_listen = 88

[realms]
    {{ kerberos_realm }} = {
        database_name = /var/lib/krb5kdc/principal
        acl_file = /etc/krb5kdc/kadm5.acl
        key_stash_file = /etc/krb5kdc/stash
{# TODO: Kerberos and RHEL default for max_renewable_life is 0 #}
        max_renewable_life = 7d 0h 0m 0s
        supported_enctypes = aes256-cts:normal aes128-cts:normal
    }
{% endif %}
